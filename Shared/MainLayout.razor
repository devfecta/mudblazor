@inherits LayoutComponentBase

<PageTitle>BlazorApp</PageTitle>

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@(() => primaryDrawerToggle())" />
        My Application
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" OnClick="() => secondaryDrawerToggle()" />
    </MudAppBar>

    <MudDrawer @bind-Open="@primaryDrawerOpen" Anchor="Anchor.Start" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenuMain />
    </MudDrawer>

    <MudMainContent MaxWidth="MaxWidth.Medium">
        @Body
        <Footer></Footer>
    </MudMainContent>
    

    <MudDrawer @bind-Open="@secondaryDrawerOpen" Anchor="Anchor.End" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenuSecondary />
    </MudDrawer>
</MudLayout>

@code {
    bool primaryDrawerOpen = true;

    void primaryDrawerToggle()
    {
        primaryDrawerOpen = !primaryDrawerOpen;
    }

    bool secondaryDrawerOpen = false;
    Anchor anchor;

    void secondaryDrawerToggle() {
        secondaryDrawerOpen = !secondaryDrawerOpen;
    }
}